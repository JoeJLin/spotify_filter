<head>
  <title>Face The Music</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/styleResults.css" />
</head>

<body>


  <div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo center"><i class="material-icons">play_circle_outline</i>Spotify Filter</a>
      <ul class="right hide-on-med-and-down">
        <li><a href="#"><i class="material-icons">search</i></a></li>
        <li><a href="#"><i class="material-icons">view_module</i></a></li>
        <li><a http-equiv="refresh"><i class="material-icons" >refresh</i></a></li>
      </ul>
    </div>
  </nav>
</div>
<!--  BODY -->
    <div class="col s4">
      <div class="sidenav sidenav-fixed">
      <div class="collection" id ="musiclist">
        <div class="collection-item avatar teal white-text center" id="list-header">
          <h5>My playlist</h5>
          <i class="material-icons small" id ="add-playlist-button">playlist_add</i>

        </div>
        <ul class="collection" id="description-list">
          <li class="collection-item">Create a playlist of songs you like<i class="material-icons secondary-content">arrow_upward</i></li>
          <li class="collection-item">Add a song here by clicking the <br>plus button<i class="material-icons secondary-content">arrow_forward</i></li>
        </ul>
      </div>
    </div>
  </div>
<main>
  <div class="grey lighten-4 second-section">
    <div class="row">

      <div class="col s12 cardsDisplay">
{{#each tracklist}}
                  <div class="card-panel scale-transition z-depth-2 hoverable">
                    <iframe src='https://open.spotify.com/embed?uri={{this.uri}}' width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                    <a id= "add-button" class="btn-floating btn-large halfway-fab waves-effect waves-light teal hoverable" name="{{this.song_name}}" album="{{this.album_name}}" artist="{{this.artist}}" uri="{{this.uri}}"><i class="material-icons">add</i></a>
                  </div>
{{/each}}
</div>
</div>
</main>
</body>
