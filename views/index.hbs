<link rel='stylesheet' href='/stylesheets/style.css' />

<div class="first-section">
    <i class="material-icons logo">play_circle_outline</i>
    <h1>Spotify Filter</h1>
</div>

<div class="second-section center">
  <h2 id="content">Discover New Music</h2>
</div>

<div class="row">
  <div class="col s12 third-section">

    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger filterButton" href="#modal1">Choose your filters</a>

    <!-- Modal Structure -->
    <form class="genreForm" action="/genre" method="GET">
      <div id="modal1" class="modal">

        <div class="legend container">
          <legend>Popularity:</legend>
        </div>

        <div class="modal-content popupButtonsPopularitySection">
          <input type="radio" name="pop" value="Who?" id="Who?" checked><label class="btn-small popularityButton z-depth-1" for="Who?">Who this?</label>
          <input type="radio" name="pop" value="Kinda known" id="Kinda known"><label class="btn-small popularityButton" for="Kinda known">Kinda known</label>
          <input type="radio" name="pop" value="Balance" id="Balance"><label class="btn-small popularityButton" for="Balance">Balance</label>
          <input type="radio" name="pop" value="Popular" id="Popular"><label class="btn-small popularityButton" for="Popular">Top Hits</label>
        </div>

        <div class="legend container">
          <legend>Genre:</legend>
        </div>

        <div class="modal-content popupButtonsGenreSection">

          <input type="radio" name="genre" value="Blues" id="Blues" checked><label class="waves-effect waves-light btn-large genreButton" for="Blues">Blues</label>
          <input type="radio" name="genre" value="Classical" id="Classical" ><label class="waves-effect waves-light btn-large genreButton" for="Classical">Classical</label>
          <input type="radio" name="genre" value="Country" id="Country" ><label class="waves-effect waves-light btn-large genreButton" for="Country">Country</label>
          <input type="radio" name="genre" value="EDM" id="EDM" ><label class="waves-effect waves-light btn-large genreButton" for="EDM">EDM</label>
          <input type="radio" name="genre" value="Desi" id="Desi" ><label class="waves-effect waves-light btn-large genreButton" for="Desi">Desi</label>
          <input type="radio" name="genre" value="Folk & Acoustic" id="Folk & Acoustic" ><label class="waves-effect waves-light btn-large genreButton" for="Folk & Acoustic">Folk & Acoustic</label>
          <input type="radio" name="genre" value="Funk" id="Funk" ><label class="waves-effect waves-light btn-large genreButton" for="Funk">Funk</label>
          <input type="radio" name="genre" value="Gospel" id="Gospel" ><label class="waves-effect waves-light btn-large genreButton" for="Gospel">Gospel</label>
          <input type="radio" name="genre" value="Hip-Hop" id="Hip-Hop" ><label class="waves-effect waves-light btn-large genreButton" for="Hip-Hop">Hip-Hop</label>
          <input type="radio" name="genre" value="indie-pop" id="indie-pop" ><label class="waves-effect waves-light btn-large genreButton" for="indie-pop">Indie</label>
          <input type="radio" name="genre" value="Jazz" id="Jazz" ><label class="waves-effect waves-light btn-large genreButton" for="Jazz">Jazz</label>
          <input type="radio" name="genre" value="K-Pop" id="K-Pop" ><label class="waves-effect waves-light btn-large genreButton" for="K-Pop">K-Pop</label>
          <input type="radio" name="genre" value="Latin" id="Latin" ><label class="waves-effect waves-light btn-large genreButton" for="Latin">Latin</label>
          <input type="radio" name="genre" value="Metal" id="Metal" ><label class="waves-effect waves-light btn-large genreButton" for="Metal">Metal</label>
          <input type="radio" name="genre" value="Pop" id="Pop" ><label class="waves-effect waves-light btn-large genreButton" for="Pop">Pop</label>
          <input type="radio" name="genre" value="Punk" id="Punk" ><label class="waves-effect waves-light btn-large genreButton" for="Punk">Punk</label>
          <input type="radio" name="genre" value="R&B" id="R&B" ><label class="waves-effect waves-light btn-large genreButton" for="R&B">R&B</label>
          <input type="radio" name="genre" value="Reggae" id="Reggae" ><label class="waves-effect waves-light btn-large genreButton" for="Reggae">Reggae</label>
          <input type="radio" name="genre" value="Rock" id="Rock" ><label class="waves-effect waves-light btn-large genreButton" for="Rock">Rock</label>
          <input type="radio" name="genre" value="Soul" id="Soul" ><label class="waves-effect waves-light btn-large genreButton" for="Soul">Soul</label>
        </div>

        <div class="submitButtonSection">
          <button type="submit" name="submitButton" class="btn-floating btn-large waves-effect waves-light submitButton"><i class="material-icons" id="submitIcon">arrow_forward</i></button>
        </div>
      </div>

    </form>

  </div>
</div>
